/**
 * @file
 * Install, update and uninstall functions for the wowguild module.
 */

/**
 * Implementation of hook_install().
 */
function wowguild_install() {
  drupal_install_schema('wowguildmembers', 'wowguildprofessions', 'wowguildapplies');

  $value = array(
      'Warrior' => 0,
      'Paladin' => 0,
      'Hunter' => 0,
      'Roque' => 0,
      'Priest' => 0,
      'Death_Knight' => 0,
      'Shaman' => 0,
      'Mage' => 0,
      'Warlock' => 0,
      'Druid' => 0
  );
  variable_set('wowguild_reqruiting', $value);
}

/**
  * Implementation of hook_uninstall().
  */
function wowguild_uninstall() {
  drupal_uninstall_schema('wowguildmembers', 'wowguildprofessions', 'wowguildapplies');

  variable_del('wowguid_settings');
  variable_del('wowguild_reqruiting');
}

